{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": "app/javascripts",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "allowJs": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["app/javascripts", "jest.setup.ts", "vite.config.ts", "postcss.config.ts"]
}
